@model IdentityLearn.Models.ViewModel.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        用户登录
    </div>
@Html.ValidationSummary()
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>用户名</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "用户名" })
    </div>
    <div class="form-group">
        <label>密码</label>
        @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "密码" })
    </div>
    <button class="btn btn-primary" type="submit">登录</button><a href="/Account/Register" title="注册" alt="注册">注册</a>
}
</div>

