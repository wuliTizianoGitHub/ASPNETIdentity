@model IdentityLearn.Models.ViewModel.MyUserViewModel
@{
    ViewBag.Title = "Register";
}


<div class="panel panel-primary">
    <div class="panel-heading">
        用户注册
    </div>
    @Html.ValidationSummary()
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <label>用户名</label>
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "用户名" })
        </div>
        <div class="form-group">
            <label>邮箱</label>
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "邮箱" })
        </div>
        <div class="form-group">
            <label>密码</label>
            @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "密码" })
        </div>
        <button class="btn btn-primary" type="submit">注册</button>
    }
</div>
